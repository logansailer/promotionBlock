chrome.webNavigation.onCommitted.addListener(function (tab) {
  //prevents the script from running when other frames load
  if (tab.frameId === 0) {
    chrome.tabs.query({ active: true, lastFocusedWindow: true }, (tabs) => {
      //get url of the site, removing protocol and queries
      let url = tabs[0].url;
      let parsedUrl = url
        .replace("https://", "")
        .replace("http://", "")
        .replace("www.", "");
      let domain = parsedUrl
        .slice(
          0,
          parsedUrl.indexOf("/") == -1
            ? parsedUrl.length
            : parsedUrl.indexOf("/")
        )
        .slice(
          0,
          parsedUrl.indexOf("?") == -1
            ? parsedUrl.length
            : parsedUrl.indexOf("?")
        );

      try {
        if (domain.length < 1 || domain === null || domain === undefined) {
          return;
        } else if (domain == "linkedin.com") {
          runBlockingScript();
          return;
        }
      } catch (err) {
        throw err;
      }
    });
  }
});

function runBlockingScript() {
  //inject script from file into the site
  chrome.tabs.executeScript({
    file: "blocker.js",
  });
  return true;
}
